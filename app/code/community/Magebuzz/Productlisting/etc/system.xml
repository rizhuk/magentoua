<?xml version="1.0"?>
<config>
	<!-- Add tab Magebuzz Add-ons -->
    <tabs>
        <magebuzz translate="label">
            <label>Magebuzz Add-ons</label>
            <sort_order>400</sort_order>
        </magebuzz>
    </tabs>
	
	<!-- Add sections -->
	<sections>
		<!-- Product Listing section -->
        <productlisting translate="label" module="productlisting">
            <label>Product Listing</label>
            <tab>magebuzz</tab>
            <frontend_type>text</frontend_type>
            <sort_order>299</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			
			<!-- Config -->
			<groups>
				<product_setting translate="label">
                    <label>Product Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<type_product translate="label comment">
							<label>Product Type</label>
                            <frontend_type>select</frontend_type>
							<source_model>productlisting/system_config_type</source_model>
							<sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</type_product>
						<category_filter translate="label comment">
							<label>Category Filter</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</category_filter>
						<num_products translate="label, comment">
							<label>Number of Product Show</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</num_products>
						<title_products translate="label, comment">
							<label>Custom Title</label>
							<comment>Default title is title of product type</comment>
							<frontend_type>text</frontend_type>
							<sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</title_products>
						<show_description translate="label comment">
							<label>Show Product Description</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</show_description>
					</fields>
				</product_setting>
			</groups>
		</productlisting>
    </sections>
</config>